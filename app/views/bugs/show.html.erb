

<p>
  <strong>Title:</strong>
  <%= @bug.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @bug.description %>
</p>

<p>
  <strong>Status:</strong>
  <%= @bug.status %>
</p>

<p>
  <strong>image:</strong>
  <% if @bug.image.attached?%>
    <%= image_tag @bug.image, width:"100px" %>
  <%end%>
</p>

<%= link_to 'Destroy', @bug, method: :delete, data: { confirm: 'Are you sure?' }  if !(current_user.role=='Developer')%>
<%= link_to 'Edit', edit_bug_path(@bug) %> |
<%= link_to 'Back', bugs_path %>
